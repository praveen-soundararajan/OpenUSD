#usda 1.0
(
    defaultPrim = "World"
    upAxis = "Y"
)

def Xform "World" (
    kind = "group"
)
{
    def Scope "Markers"
    {
        def Cone "PointA"
        {
            uniform token axis = "Y"
            double height = 2
            color3f[] primvars:displayColor = [(1, 0.85, 0.2)]
            double radius = 0.5
            double3 xformOp:translate = (-3, 1, -3)
            uniform token[] xformOpOrder = ["xformOp:translate"]
        }

        def Cone "PointB"
        {
            uniform token axis = "Y"
            double height = 2
            color3f[] primvars:displayColor = [(1, 0.85, 0.2)]
            double radius = 0.5
            double3 xformOp:translate = (-3, 1, 3)
            uniform token[] xformOpOrder = ["xformOp:translate"]
        }

        def Cone "PointC"
        {
            uniform token axis = "Y"
            double height = 2
            color3f[] primvars:displayColor = [(1, 0.85, 0.2)]
            double radius = 0.5
            double3 xformOp:translate = (3, 1, -3)
            uniform token[] xformOpOrder = ["xformOp:translate"]
        }

        def Cone "PointD"
        {
            uniform token axis = "Y"
            double height = 2
            color3f[] primvars:displayColor = [(1, 0.85, 0.2)]
            double radius = 0.5
            double3 xformOp:translate = (3, 1, 3)
            uniform token[] xformOpOrder = ["xformOp:translate"]
        }
    }

    def Xform "Component" (
        kind = "component"
    )
    {
        double3 xformOp:translate = (0, 2, 0)
        uniform token[] xformOpOrder = ["xformOp:translate"]

        def Cube "Body"
        {
            color3f[] primvars:displayColor = [(0.25, 0.55, 0.85)]
            float3 xformOp:scale = (3, 1, 3)
            uniform token[] xformOpOrder = ["xformOp:scale"]
        }
    }
}

